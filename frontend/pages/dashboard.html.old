<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Aplicación de Finanzas</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .dashboard-container {
            margin-top: 2rem;
        }
        .card {
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            margin-bottom: 1rem;
            border: none;
        }
        .card-title {
            color: #3b5998;
            font-weight: bold;
        }
        .btn-primary {
            background-color: #3b5998;
            border-color: #3b5998;
        }
        .btn-primary:hover {
            background-color: #2d4373;
            border-color: #2d4373;
        }
        .subscription-item {
            display: flex;
            align-items: center;
            padding: 0.5rem;
            border-bottom: 1px solid #e9ecef;
        }
        .subscription-item:last-child {
            border-bottom: none;
        }
        .subscription-icon {
            width: 40px;
            height: 40px;
            margin-right: 1rem;
            object-fit: cover;
            border-radius: 50%;
        }
        .chart-container {
            position: relative;
            margin: auto;
            height: 300px;
            width: 100%;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><i class="fas fa-piggy-bank me-2"></i>Finanzas App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-user me-1"></i>Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-sign-out-alt me-1"></i>Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container dashboard-container">
        <h1 class="mb-4">Dashboard Financiero</h1>
        
        <div class="row">
            <div class="col-md-6">
                <!-- Suscripciones -->
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title"><i class="fas fa-calendar-alt me-2"></i>Suscripciones</h2>
                        <div class="subscription-list mb-3">
                            <div class="subscription-item">
                                <img src="https://logo.clearbit.com/netflix.com" alt="Netflix" class="subscription-icon">
                                <div class="flex-grow-1">Netflix</div>
                                <span class="badge bg-primary rounded-pill">€12.99/mes</span>
                            </div>
                            <div class="subscription-item">
                                <img src="https://logo.clearbit.com/spotify.com" alt="Spotify" class="subscription-icon">
                                <div class="flex-grow-1">Spotify</div>
                                <span class="badge bg-primary rounded-pill">€9.99/mes</span>
                            </div>
                        </div>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSubscriptionModal">
                            <i class="fas fa-plus me-1"></i>Añadir Suscripción
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <!-- Gastos e Ingresos -->
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title"><i class="fas fa-chart-pie me-2"></i>Resumen Financiero</h2>
                        <div class="chart-container">
                            <canvas id="financialSummaryChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <!-- Gastos -->
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title"><i class="fas fa-shopping-cart me-2"></i>Gastos</h2>
                        <div class="chart-container">
                            <canvas id="expensesChart"></canvas>
                        </div>
                        <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addExpenseModal">
                            <i class="fas fa-plus me-1"></i>Añadir Gasto
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <!-- Ingresos -->
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title"><i class="fas fa-money-bill-wave me-2"></i>Ingresos</h2>
                        <div class="chart-container">
                            <canvas id="incomeChart"></canvas>
                        </div>
                        <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addIncomeModal">
                            <i class="fas fa-plus me-1"></i>Añadir Ingreso
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para añadir suscripción -->
    <div class="modal fade" id="addSubscriptionModal" tabindex="-1" aria-labelledby="addSubscriptionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSubscriptionModalLabel">Añadir Suscripción</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="subscriptionName" class="form-label">Nombre de la suscripción</label>
                            <input type="text" class="form-control" id="subscriptionName" required>
                        </div>
                        <div class="mb-3">
                            <label for="subscriptionAmount" class="form-label">Monto mensual</label>
                            <input type="number" class="form-control" id="subscriptionAmount" step="0.01" required>
                        </div>
                        <div class="mb-3">
                            <label for="subscriptionIcon" class="form-label">URL del icono</label>
                            <input type="url" class="form-control" id="subscriptionIcon">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para añadir gasto -->
    <div class="modal fade" id="addExpenseModal" tabindex="-1" aria-labelledby="addExpenseModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addExpenseModalLabel">Añadir Gasto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="expenseName" class="form-label">Descripción del gasto</label>
                            <input type="text" class="form-control" id="expenseName" required>
                        </div>
                        <div class="mb-3">
                            <label for="expenseAmount" class="form-label">Monto</label>
                            <input type="number" class="form-control" id="expenseAmount" step="0.01" required>
                        </div>
                        <div class="mb-3">
                            <label for="expenseCategory" class="form-label">Categoría</label>
                            <select class="form-select" id="expenseCategory" required>
                                <option value="">Selecciona una categoría</option>
                                <option value="alimentacion">Alimentación</option>
                                <option value="transporte">Transporte</option>
                                <option value="ocio">Ocio</option>
                                <option value="otros">Otros</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para añadir ingreso -->
    <div class="modal fade" id="addIncomeModal" tabindex="-1" aria-labelledby="addIncomeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addIncomeModalLabel">Añadir Ingreso</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="incomeName" class="form-label">Descripción del ingreso</label>
                            <input type="text" class="form-control" id="incomeName" required>
                        </div>
                        <div class="mb-3">
                            <label for="incomeAmount" class="form-label">Monto</label>
                            <input type="number" class="form-control" id="incomeAmount" step="0.01" required>
                        </div>
                        <div class="mb-3">
                            <label for="incomeCategory" class="form-label">Categoría</label>
                            <select class="form-select" id="incomeCategory" required>
                                <option value="">Selecciona una categoría</option>
                                <option value="salario">Salario</option>
                                <option value="freelance">Freelance</option>
                                <option value="inversiones">Inversiones</option>
                                <option value="otros">Otros</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Datos de ejemplo para los gráficos
        const financialSummaryData = {
            labels: ['Ingresos', 'Gastos', 'Suscripciones'],
            datasets: [{
                data: [2500, 1800, 150],
                backgroundColor: ['#4CAF50', '#F44336', '#2196F3'],
            }]
        };

        const expensesData = {
            labels: ['Alimentación', 'Transporte', 'Ocio', 'Otros'],
            datasets: [{
                data: [500, 300, 200, 800],
                backgroundColor: ['#FFC107', '#03A9F4', '#9C27B0', '#FF5722'],
            }]
        };

        const incomeData = {
            labels: ['Salario', 'Freelance', 'Inversiones', 'Otros'],
            datasets: [{
                data: [2000, 300, 150, 50],
                backgroundColor: ['#4CAF50', '#8BC34A', '#CDDC39', '#FFEB3B'],
            }]
        };

        // Configuración común para los gráficos
        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
        };

        // Crear los gráficos
        new Chart(document.getElementById('financialSummaryChart'), {
            type: 'doughnut',
            data: financialSummaryData,
            options: commonOptions
        });

        new Chart(document.getElementById('expensesChart'), {
            type: 'pie',
            data: expensesData,
            options: commonOptions
        });

        new Chart(document.getElementById('incomeChart'), {
            type: 'pie',
            data: incomeData,
            options: commonOptions
        });
    </script>
</body>
</html>